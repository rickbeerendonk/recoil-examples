{
  "name": "recoil-examples",
  "version": "1.0.0",
  "description": "Examples for [Recoil](https://recoiljs.org/).",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rickbeerendonk/recoil-examples.git"
  },
  "author": "Rick Beerendonk",
  "license": "EUPL-1.2",
  "bugs": {
    "url": "https://github.com/rickbeerendonk/recoil-examples/issues"
  },
  "homepage": "https://github.com/rickbeerendonk/recoil-examples#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "scripts": {
    "clean": "rimraf node_modules",
    "eslint": "eslint . --ext .js,.jsx,.mjs --cache",
    "eslint-fix": "eslint . --ext .js,.jsx,.mjs --cache --fix",
    "prettier": "prettier --list-different '**/*.{json,js,jsx,html,md,mjs,mts,ts,tsx}'",
    "prettier-fix": "prettier --write '**/*.{json,js,jsx,html,md,mjs,mts,ts,tsx}'",
    "start": "node ./server/server.js",
    "validate": "npm run eslint && npm run prettier"
  },
  "devDependencies": {
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "eslint": "8.50.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.0.0",
    "husky": "8.0.3",
    "prettier": "3.4.1",
    "rimraf": "6.0.1"
  },
  "dependencies": {
    "@babel/core": "7.26.0",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-react": "7.25.9",
    "@babel/standalone": "7.26.2",
    "core-js": "3.39.0",
    "esbuild": "0.19.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recoil": "0.7.7",
    "serve": "14.2.4"
  }
}
